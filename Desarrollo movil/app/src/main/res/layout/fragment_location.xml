<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.location.LocationFragment"
    android:background="@color/dark_gray"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Somos una empresa que se dedica al alquiler de karts para competir en nuestros circuitos."
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="39dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tenemos una amplia variedad de circuitos con diferentes karts e instalaciones para poder disfrutar al maximo de esta experiencia unica"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/texto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Nos encontramos en la ciudad de Hell, en Noruega. Nuestra dirección es Lånkebanen, 7517 Hell, Noruega"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:src="@drawable/localizacion"
        tools:layout_editor_absoluteX="-283dp"
        tools:layout_editor_absoluteY="166dp" />
</androidx.constraintlayout.widget.ConstraintLayout>